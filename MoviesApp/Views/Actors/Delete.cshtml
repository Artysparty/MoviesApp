@model MoviesApp.ViewModels.DeleteActorViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Actor</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <label asp-for="FirstName"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.FirstName
        </dd>
        <dt class="col-sm-2">
            <label asp-for="LastName"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.LastName
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Birthday"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Birthday.ToString("mm-dd-yy")
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Growth"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Growth
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Weight"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Weight
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>